@code {
    private ApplicationUser? currentUser;
    private bool isLoadingUser = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadCurrentUser();
    }

    private async Task LoadCurrentUser()
    {
        try
        {
            isLoadingUser = true;
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                currentUser = await UserManager.GetUserAsync(authState.User);
                // Debug logging
                if (currentUser != null)
                {
                    Console.WriteLine($"User loaded: {currentUser.Email}, Role: {currentUser.Role}");
                }
                else
                {
                    Console.WriteLine("Current user is null after UserManager.GetUserAsync");
                }
            }
            else
            {
                Console.WriteLine("User is not authenticated");
            }
        }
        catch (Exception ex)
        {
            // Handle potential DbContext issues gracefully
            Console.WriteLine($"Error loading user: {ex.Message}");
            currentUser = null;
        }
        finally
        {
            isLoadingUser = false;
            StateHasChanged();
        }
    }
}
